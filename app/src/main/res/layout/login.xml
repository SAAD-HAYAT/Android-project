<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context=".forms.LoginForm">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:text="@string/title_login"
        android:textSize="@dimen/login_signin_title_size"
        android:textAlignment="center"
        android:layout_marginTop="130dp"
        android:textColor="@color/grey"
        android:layout_marginBottom="@dimen/login_signin_title_spacing_below"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/txt_name"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        />
    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_below="@+id/txt_name"
        android:background="@drawable/edittext_bottom_line"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/txtpass"
        android:layout_below="@+id/txtname"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        />
    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_below="@+id/txtpass"
        android:background="@drawable/edittext_bottom_line"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin"
        android:id="@+id/checkbox"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep me signed In"
        android:id="@+id/txtsignedin"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_login"
        android:textAllCaps="true"
        android:id="@+id/loginbtn"
        android:layout_below="@+id/txtpass"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_marginLeft="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        android:backgroundTint="@color/button_color"/>



</LinearLayout>
