<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_background"
    tools:context=".forms.Signup"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textColor="@color/grey"
        android:textSize="@dimen/login_signin_title_size"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/login_signin_title_spacing_below"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/txt1"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        />

    <EditText
        android:id="@+id/usenameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:inputType="text"
        android:layout_below="@+id/txt1"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        android:background="@drawable/edittext_bottom_line"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/txt2"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        android:layout_below="@+id/txt1"
        />

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/txt2"
        android:background="@drawable/edittext_bottom_line"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/txt3"
        android:layout_below="@+id/txt2"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        />
    <EditText
        android:id="@+id/passTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_below="@+id/txt3"
        android:background="@drawable/edittext_bottom_line"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:id="@+id/txt4"
        android:layout_below="@+id/txt3"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        />
    <EditText
        android:id="@+id/confirmPassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_below="@+id/txt4"
        android:background="@drawable/edittext_bottom_line"
        android:layout_marginBottom="@dimen/form_field_spacing_bottom"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/txtbtn"
        android:layout_below="@+id/txt4"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_marginLeft="@dimen/form_margin"
        android:textSize="@dimen/field_size"
        android:backgroundTint="@color/button_color"
        />



</LinearLayout>
